---
import Calendar from "../icons/Calendar.astro";

interface Props {
    title: string;
    subtitle: string;
    imageSrc: string;
}

const { subtitle, title, imageSrc } = Astro.props;
---

<article class="h-full">
    <img src={imageSrc} alt="" class="lg:rounded-xl object-cover min-h-72" />
    <div class="px-5 lg:px-0">
        <a href="" class="group">
            <h3
                class="text-green-700 text-3xl mt-5 text-pretty group-hover:underline min-h-[110px]"
            >
                {title}
            </h3>
        </a>
        <p class="mt-2 text-md text-pretty">
            {subtitle}
        </p>
        <div class="flex flex-col gap-y-5 justify-end mt-5">
            <div class="flex items-center gap-x-2">
                <Calendar class="size-6 my-auto" />
                <p class="text-green-500 font-semibold">17/04/2024</p>
            </div>
            <a
                href=""
                class="bg-green-600 text-white px-10 py-2 rounded-md hover:bg-green-700 text-center hover:scale-[1.03] transition-all"
                >Leer noticia</a
            >
        </div>
    </div>
</article>
